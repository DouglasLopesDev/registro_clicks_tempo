<odoo>
  <data>

    <!-- ACTIONS OPENING VIEWS ON MODELS -->
    <record model="ir.actions.act_window" id="atividade_action_window">
      <field name="name">Atividade</field>
      <field name="res_model">apontamento.atividade</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- TOP MENU ITEM -->
    <menuitem name="Atividade" id="atividade_menu_root" sequence="1" />

    <!-- MENU CATEGORIES -->
    <menuitem name="Atividade" id="atividade_menu_1" parent="atividade_menu_root" action="atividade_action_window" sequence="1" />

    <!-- EXPLICIT LIST VIEW DEFINITION -->
    <record model="ir.ui.view" id="atividade_list">
      <field name="name">Visualização</field>
      <field name="model">apontamento.atividade</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="desenvolvedor_id" widget="many2many_tags" />
          <field name="descricao" />
          <field name="ambiente_id" />
          <field name="esta_finalizado" />
          <field name="total_horas" />
        </tree>
      </field>
    </record>

    <!-- EXPLICIT FORM VIEW DEFINITION -->
    <record model="ir.ui.view" id="atividade_form">
      <field name="name">Formulário</field>
      <field name="model">apontamento.atividade</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" />
              <h1>
                <field name="name" placeholder="Card ou atividade..." />
              </h1>
            </div>
            <group>
              <group name="first" col="2">
                <field name="desenvolvedor_id" widget="many2many_tags" />
                <field name="descricao" />
                <field name="ambiente_id" />
              </group>
              <group name="" col="2">
                <field name="esta_finalizado" widget="boolean_toggle" />
                <field name="total_horas" />
                <button string="Calcular Horas" name="calcular_horas_totais" type="object" class="oe_highlight btn-warning" />
              </group>
            </group>
            <p class="alert alert-warning mt-2 text-center font-weight-bold">SE O ATIVIDADE FOR FINALIZADO, O MESMO NÃO PODERÁ MAIS SER ALTERADO. TENHA CUIDADO!</p>
            <notebook>
              <page string="Atividades">
                <field name="apontamento_ids" />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>