<odoo>
  <data>

    <!-- ACTIONS OPENING VIEWS ON MODELS -->
    <record model="ir.actions.act_window" id="apontamento_action_window">
      <field name="name">Apontamento</field>
      <field name="res_model">apontamento.apontamento</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- TOP MENU ITEM -->
    <!-- <menuitem name="Apontamento" id="apontamento_menu_root" /> -->

    <!-- MENU CATEGORIES -->
    <!-- <menuitem name="Menu 1" id="apontamento_menu_1" parent="apontamento_menu_root" action="apontamento_action_window" /> -->

    <!-- EXPLICIT LIST VIEW DEFINITION -->
    <record model="ir.ui.view" id="apontamento_list">
      <field name="name">Visualização</field>
      <field name="model">apontamento.apontamento</field>
      <field name="arch" type="xml">
        <tree>
          <field name="atividade" />
          <field name="categoria_id" />
          <field name="desenvolvedor_id" widget="many2many_tags" />
          <field name="data_inicio" />
          <field name="data_fim" />
          <field name="total" class="alert alert-warning text-center" />
        </tree>
      </field>
    </record>

    <!-- EXPLICIT FORM VIEW DEFINITION -->
    <record model="ir.ui.view" id="apontamento_form">
      <field name="name">Formulário</field>
      <field name="model">apontamento.apontamento</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_title">
              <label for="atividade" class="oe_edit_only" />
              <h2>
                <field name="atividade" placeholder="Descrição da Atividade..." />
              </h2>
            </div>
            <group>
              <field name="desenvolvedor_id" widget="many2many_tags" />
              <field name="categoria_id" />
            </group>
            <group>
              <group>
                <group>
                  <button string="Iniciar Atividade" name="iniciar_atividade" type="object" class="oe_highlight btn-warning" />
                </group>
                <field name="data_inicio" readonly="0" />
              </group>

              <group>
                <group>
                  <button string="Finalizar Atividade" name="finalizar_atividade" type="object" class="oe_highlight btn-warning" />
                </group>
                <field name="data_fim" readonly="0" />
              </group>

              <div class="oe_title">
                <label for="total" class="oe_edit_only" />
                <p>
                  <field name="total" class="alert alert-warning" />
                </p>
              </div>

            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>