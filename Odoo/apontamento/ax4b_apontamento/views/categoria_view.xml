<odoo>
    <data>

        <!-- ACTIONS OPENING VIEWS ON MODELS -->
        <record model="ir.actions.act_window" id="categoria_action_window">
            <field name="name">categoria</field>
            <field name="res_model">apontamento.categoria</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENU CATEGORIES -->
        <menuitem name="Categoria" id="categoria_menu_1" parent="atividade_menu_root" action="categoria_action_window" />

        <!-- EXPLICIT LIST VIEW DEFINITION -->
        <record model="ir.ui.view" id="categoria_list">
            <field name="name">Visualização</field>
            <field name="model">apontamento.categoria</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- EXPLICIT FORM VIEW DEFINITION -->
        <record model="ir.ui.view" id="categoria_form">
            <field name="name">Formulário</field>
            <field name="model">apontamento.categoria</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Nome da Categoria..." />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="topicos" />
                                <field name="subtopicos" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>