<odoo>
    <data>

        <!-- ACTIONS OPENING VIEWS ON MODELS -->
        <record model="ir.actions.act_window" id="ambiente_action_window">
            <field name="name">Ambiente</field>
            <field name="res_model">apontamento.ambiente</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENU CATEGORIES -->
        <menuitem name="Ambiente" id="ambiente_menu_1" parent="atividade_menu_root" action="ambiente_action_window" />

        <!-- EXPLICIT LIST VIEW DEFINITION -->
        <record model="ir.ui.view" id="ambiente_list">
            <field name="name">Visualização</field>
            <field name="model">apontamento.ambiente</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- EXPLICIT FORM VIEW DEFINITION -->
        <record model="ir.ui.view" id="ambiente_form">
            <field name="name">Formulário</field>
            <field name="model">apontamento.ambiente</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Nome do ambiente..." />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>